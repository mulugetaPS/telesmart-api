generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  phone           String  @unique
  isActive        Boolean @default(true)
  openid          String? @unique
  accessToken     String? // Cached Imou access token
  tokenExpireTime BigInt? // Token expiration timestamp
  ftpUsername     String? @unique // FTP username for this user (deprecated, use FtpUser model)
  ftpPassword     String? // FTP password (deprecated, use FtpUser model)

  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  devices Device[]
  ftpUser FtpUser?

  @@index([phone])
  @@index([openid])
}

model Device {
  id          Int      @id @default(autoincrement())
  userId      Int
  deviceId    String // Imou device serial number
  name        String?
  deviceModel String?
  status      String? // 'online' | 'offline'
  channels    Int      @default(1)
  bindCode    String? // Device verification code (encrypted)
  permissions String[] // Array of permissions: ['Ptz', 'Talk', 'Real', 'Config']
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  videos Video[]

  @@unique([userId, deviceId])
  @@index([userId])
  @@index([deviceId])
}

model Video {
  id            Int      @id @default(autoincrement())
  deviceId      Int
  userId        Int
  filename      String
  filepath      String // Relative path from FTP root
  filesize      BigInt // Size in bytes
  duration      Int? // Duration in seconds
  thumbnailPath String?
  recordedAt    DateTime // When video was recorded
  uploadedAt    DateTime @default(now())
  createdAt     DateTime @default(now())

  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([deviceId])
  @@index([userId])
  @@index([recordedAt])
}

model FtpUser {
  id                Int       @id @default(autoincrement())
  userId            Int       @unique
  username          String    @unique
  password          String // MD5 crypt hash for Pure-FTPd
  uid               Int       @default(2001)
  gid               Int       @default(2001)
  homeDir           String
  uploadBandwidth   Int       @default(0) // KB/s, 0 = unlimited
  downloadBandwidth Int       @default(0) // KB/s, 0 = unlimited
  quotaSize         BigInt    @default(10737418240) // 10GB in bytes (storage limit)
  usedBytes         BigInt    @default(0) // Current storage usage in bytes
  quotaFiles        Int       @default(0) // 0 = unlimited
  storagePlan       String    @default("free") // 'free', 'basic', 'premium', 'enterprise'
  isActive          Boolean   @default(true)
  lastLoginAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([username])
  @@index([userId])
  @@index([isActive])
  @@index([storagePlan])
}
