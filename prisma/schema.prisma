generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  phone           String  @unique
    isActive    Boolean   @default(true)
  openid          String? @unique
  accessToken     String? // Cached Imou access token
  tokenExpireTime BigInt? // Token expiration timestamp

 lastLoginAt     DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices Device[]
 @@index([phone])
  @@index([openid])
}

model Device {
  id          Int      @id @default(autoincrement())
  userId      Int
  deviceId    String // Imou device serial number
  name        String?
  deviceModel String?
  status      String? // 'online' | 'offline'
  channels    Int      @default(1)
  bindCode    String? // Device verification code (encrypted)
  permissions String[] // Array of permissions: ['Ptz', 'Talk', 'Real', 'Config']
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceId])
  @@index([userId])
  @@index([deviceId])
}
